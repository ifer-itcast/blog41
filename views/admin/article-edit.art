{{ extend './common/layout.art' }}

{{block 'main'}}
    
    <!-- 头部 -->
    {{ include './common/header.art' }}
    <!-- /头部 -->
    <!-- 主体内容 -->
    <div class="content">
        <!-- 侧边栏 -->
        {{ include './common/aside.art' }}
        <!-- 侧边栏 -->
        <div class="main">
            <!-- 分类标题 -->
            <div class="title">
                <h4>5b9a716cb2d2bf17706bcc0a</h4>
            </div>
            <!-- /分类标题 -->
            <form class="form-container" action="/admin/article-edit" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>标题</label>
                    <input name="title" type="text" class="form-control" placeholder="请输入文章标题">
                </div>
                <div class="form-group">
                    <label>作者</label>
                    <input name="author" type="text" class="form-control" readonly value="{{@id}}">
                </div>
                <div class="form-group">
                    <label>发布时间</label>
                    <input name="publishDate" type="date" class="form-control">
                </div>
                
                <div class="form-group">
                   <label for="exampleInputFile">文章封面</label>
                   <input name="cover" type="file" id="inputFile">
                   <div class="thumbnail-waper">
                       <img class="img-thumbnail" src="" id="prevImg">
                   </div>
                </div>
                <div class="form-group">
                    <label>内容</label>
                    <textarea name="content" class="form-control" id="editor"></textarea>
                </div>
                <div class="buttons">
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
            
        </div>
    </div>
    <!-- /主体内容 -->
{{/block}}
{{block 'script'}}
    <script src="/admin/lib/ckeditor5/ckeditor.js"></script>
    <script type="text/javascript">
    
        let editor;

        ClassicEditor
                .create( document.querySelector('#editor'))
                .then(newEditor => {
                    editor = newEditor;
                })
                .catch( error => {
                    console.error( error );
                });

        // 获取数据
        // const editorData = editor.getData();

        let oInputFile = document.querySelector('#inputFile');
        let oPrevImg = document.querySelector('#prevImg');
        oInputFile.onchange = function() {
            // console.log(this.files[0]);
            // 创建 reader 对象
            let reader = new FileReader();
            // 读取文件为 Base64 类型的编码
            reader.readAsDataURL(this.files[0]);
            // 读取完成后拿到结果给图片的地址
            reader.onload = function() {
                oPrevImg.src = this.result;
            };
        };
    </script>
{{/block}}
